{% extends 'AcmeSiteBundle:Default:base.html.twig' %}
{% block body %}
	<div class="form-default">
		<h1>Autoryzacja</h1>
		<div class="tabletVertivalContainer">
		{{ include('AcmeSiteBundle:Default:tablet.html.twig', {'name': 'Start', 'description': 'strona główna', 'href': url('acme_site_homepage')}) }}
		{{ include('AcmeSiteBundle:Default:tablet.html.twig', {'name': 'Panel', 'description': 'strona główna panelu administracyjnego', 'href': url('acme_user_panel')}) }}
		{{ include('AcmeSiteBundle:Default:tablet.html.twig', {'name': 'Powrót', 'description': 'poprzednia strona', 'href': 'javascript: history.back(-1)'}) }}
	</div>
		<!-- <p class="desc">wymagana w celu kontynuacji</p> -->
		{% if error is defined %}
			<div class="error-message">
				{{ error }}
			</div>
		{% endif %}
		{% form_theme passwdForm 'AcmeFormBundle:Default:default-form.html.twig' %}
		{{ form(passwdForm) }}
	</div>
{% endblock %}