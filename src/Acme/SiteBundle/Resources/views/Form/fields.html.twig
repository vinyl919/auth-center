{% block form_row %}
{% spaceless %}
{{ form_label(form, null, {'label_attr' : {'class' : 'control-label' }} ) }}
<div class="controls">
{{ form_widget(form, {'attr' : {'class' : 'form-control' }} ) }}
<p>{{ form_errors(form, {'attr' : {'class' : 'help-block' }} ) }}</p>
</div>
{% endspaceless %}
{% endblock form_row %}